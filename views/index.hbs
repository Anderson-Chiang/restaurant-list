<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer d-flex justify-content-between">
    <div class="search-bar-inner">
      <form action="/search">
        <div class="input-group">
          <input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
    <div class="dropdown">
      <a class="btn btn-outline-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Sort</a>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <a class="dropdown-item" href="/sort/AtoZ">A -> Z</a>
        <a class="dropdown-item" href="/sort/ZtoA">Z -> A</a>
        <a class="dropdown-item" href="/sort/category">類別</a>
        <a class="dropdown-item" href="/sort/location">地區</a>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <div class="crud-buttons d-flex justify-content-end mt-1">
                <a type="button" class="btn btn-outline-secondary btn-sm" href="./restaurants/{{this._id}}/edit">Edit</a>
                <a type="button" class="btn btn-outline-info btn-sm mx-1" href="./restaurants/{{this._id}}">Details</a>
                <form action="./restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('確定要刪除此筆資料嗎？')">
                  <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>